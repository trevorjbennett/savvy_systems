{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "SAVVY",
  "version": "0.1.0",
  "identifier": "com.savvy.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:5173",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "SAVVY - Package Manager",
        "width": 1200,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null,
      "capabilities": [
        {
          "identifier": "main-capability",
          "description": "Main app capabilities",
          "windows": ["main"],
          "permissions": [
            "http:default",
            {
              "identifier": "http:allow-fetch",
              "allow": [
                {
                  "url": "https://api.github.com/repos/trevorjbennett/savvy_systems/**"
                },
                {
                  "url": "https://github.com/trevorjbennett/savvy_systems/**"
                }
              ]
            },
            "http:allow-fetch-cancel",
            "http:allow-fetch-read-body",
            "http:allow-fetch-send"
          ]
        }
      ]
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
